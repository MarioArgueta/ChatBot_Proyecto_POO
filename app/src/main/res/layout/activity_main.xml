<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ListView
        android:id="@+id/List_of_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alingParentStart="true"
        android:layout_alingParentTop="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="0pt"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        tools:layout_editor_absoluteX="-25dp"
        tools:layout_editor_absoluteY="311dp"></ListView>

    /*android:layout_toLeftOf="@+id/fab"*/
    <EditText

        android:id="@+id/User_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alingParentStart="true"
        android:layout_alingParentBottom="true"
        android:hint="Escriba..."
        app:layout_constraintBottom_toBottomOf="parent"></EditText>
    //minuto  8

    <android.support.design.widget.FloatingActionButton>
        android:clickable="true"
        android:src="drawable/ic_Send"
        android:id="@+id/fab"
        android:tint="android:color/white"
        android:layout_alingParentBottom="true"
        android:layout_alingParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    </android.support.design.widget.FloatingActionButton>

</androidx.constraintlayout.widget.ConstraintLayout>